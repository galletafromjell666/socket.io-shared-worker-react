{
	"compilerOptions": {
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2019",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"allowJs": true,
		"outDir": "dist",
		"baseUrl": "src",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceRoot": "/",
		"inlineSources": true,
		"inlineSourceMap": true,
		"paths": {
			"*": [
				"node_modules/*",
				"../app/node_modules/*",
				"src/types/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
  }